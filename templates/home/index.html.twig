					<img src="{{ asset('assets/image/4.png') }}" class="d-block w-100" alt="Image accueil">
				</div>
				<div class="carousel-item">
					<img src="{{ asset('assets/image/6.jpeg') }}" class="d-block w-100" alt="Image accueil">
				</div>
			</div>
