{% extends 'base.html.twig' %}

{% block title %}Students{% endblock %}

{% block body %}
    <h1>Students</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ student.gender }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ student.firstName }}</td>
            </tr>
            <tr>
                <th>Middle_name</th>
                <td>{{ student.middleName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ student.lastName }}</td>
            </tr>
            <tr>
                <th>Cell_mobile_number</th>
                <td>{{ student.cellMobileNumber }}</td>
            </tr>
            <tr>
                <th>Email_address</th>
                <td>{{ student.emailAddress }}</td>
            </tr>
            <tr>
                <th>Date_first_rental</th>
                <td>{{ student.dateFirstRental ? student.dateFirstRental|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_left_university</th>
                <td>{{ student.dateLeftUniversity ? student.dateLeftUniversity|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Other_student_details</th>
                <td>{{ student.otherStudentDetails }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('students_index') }}">back to list</a>

    <a href="{{ path('students_edit', {'id': student.id}) }}">edit</a>

    {{ include('students/_delete_form.html.twig') }}
{% endblock %}
