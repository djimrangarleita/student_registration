{% extends 'base.html.twig' %}

{% block title %}Classes index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Classes index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Class_name</th>
					<th>Class_description</th>
					<th>Other_details</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for class in classes %}
					<tr>
						<td>{{ class.id }}</td>
						<td>{{ class.className }}</td>
						<td>{{ class.classDescription }}</td>
						<td>{{ class.otherDetails }}</td>
						<td>
							<a href="{{ path('classes_show', {'id': class.id}) }}">show</a>
							<a href="{{ path('classes_edit', {'id': class.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('classes_new') }}">Create new</a>
	</div>
{% endblock %}
