{% extends 'base.html.twig' %}

{% block title %}Classes{% endblock %}

{% block body %}
    <h1>Classes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ class.id }}</td>
            </tr>
            <tr>
                <th>Class_name</th>
                <td>{{ class.className }}</td>
            </tr>
            <tr>
                <th>Class_description</th>
                <td>{{ class.classDescription }}</td>
            </tr>
            <tr>
                <th>Other_details</th>
                <td>{{ class.otherDetails }}</td>
