{% extends 'base.html.twig' %}

{% block title %}StudentsRelationships index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>StudentsRelationships index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Student</th>
					<th>Email Student</th>
					<th>Person</th>
					<th>Email Person</th>
					<th>Phone Person</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for students_relationship in students_relationships %}
					<tr>
						<td>{{ students_relationship.id }}</td>
						<td>{{ students_relationship.student.firstName }} {{ students_relationship.student.middleName }} {{ students_relationship.student.lastName }}</td>
						<td>{{ students_relationship.student }}</td>
						<td>{{ students_relationship.person.firstName }} {{ students_relationship.person.middleName }} {{ students_relationship.person.lastName }}</td>
						<td><a href="mailto:{{ students_relationship.person }}" target="blank">{{ students_relationship.person }}</a></td>
						<td>{{ students_relationship.person.cellMobileNumber }}</td>
						<td>
							<a href="{{ path('students_relationships_show', {'id': students_relationship.id}) }}">show</a>
							<a href="{{ path('students_relationships_edit', {'id': students_relationship.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="2">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('students_relationships_new') }}">Create new</a>
	</div>
{% endblock %}
