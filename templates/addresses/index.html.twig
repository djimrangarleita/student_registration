{% extends 'base.html.twig' %}

{% block title %}Addresses index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Addresses index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Logement Universitaire ?</th>
					<th>Numero immeuble</th>
					<th>Numero rue</th>
					<th>Zone</th>
					<th>Ville</th>
					<th>Zip Code</th>
					<th>Province</th>
					<th>Pays</th>
					<th>Autres details</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for address in addresses %}
					<tr>
						<td>{{ address.id }}</td>
						<td>{{ address.universityAccommodationYn ? 'Yes' : 'No' }}</td>
						<td>{{ address.line1NumberBuilding }}</td>
						<td>{{ address.line2NumberStreet }}</td>
						<td>{{ address.line3AreaLocality }}</td>
						<td>{{ address.city }}</td>
						<td>{{ address.zipCode }}</td>
						<td>{{ address.stateProvinceCountry }}</td>
						<td>{{ address.country }}</td>
						<td>{{ address.otherAddressDetails }}</td>
						<td>
							<a href="{{ path('addresses_show', {'id': address.id}) }}">show</a>
							<a href="{{ path('addresses_edit', {'id': address.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="11">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('addresses_new') }}">Create new</a>
	</div>
{% endblock %}
